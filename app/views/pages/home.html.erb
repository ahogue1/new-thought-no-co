<div class="fluid-container home-container">
  <div class="carousel-box">
    <div id="carousel-example-generic" class="carousel slide carousel-fade" data-ride="carousel">
    <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        <% if @event %>
          <li data-target="#carousel-example-generic" data-slide-to="3"></li>
        <% end %>
      </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <%= link_to "#location", class: "clickable-carousel" do %>

        <div class="item active" style="background-image: url(<%= image_path "sunset-tree.jpg" %>)">
          <div class="slide-caption">
            <div>
              <div class="main-heading">
                <h3 class="welcome-heading">Welcome to</h3>
                <h1 class="new-thought">New Thought Northern Colorado</h1>
              </div>

              <h4 class ="carousel-sub-heading">Sunday Service: 10 am - 11:15</h4>
              <%= link_to "#location", class: "btn btn-primary location-btn" do %>
                <p>Location</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= link_to "#talks", class: "clickable-carousel" do %>
        <div class="item" style="background-image: url(<%= image_path "mountain.jpg" %>)">
          <div class="slide-caption">
            <div>
              <h3 class="main-heading">Discover Us</h3>
              <h2 class="carousel-sub-heading">Listen to our recent talks</h2>

              <%= link_to "#talks", class: "btn btn-primary location-btn" do %>
                <p>Listen Now</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= link_to "#youth_home", class: "clickable-carousel" do %>
        <div class="item" style="background-image: url(<%= image_path "kid-paint.jpg" %>)">
          <div class="slide-caption">
            <div>
              <h3 class="main-heading">Kids Connect</h3>
              <h2 class="carousel-sub-heading">Find a Youth Program</h2>

              <%= link_to "youth", class: "btn btn-primary location-btn" do %>
                <p>Learn More</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @event %>
        <div class="item event-slide" style="background-image: url(<%= image_path "walk.jpg" %>)">
          <div class="slide-caption">
            <div>
              <div class="event-box">
                <h3 class="main-heading">Upcoming Event:</h3>
                <h2 class="carousel-sub-heading"><%= @event.title %></h2>

                <p class="event-schedule">
                  <%= "#{l(@event.start_date)}: #{@event.schedule}" %>
                </p>

                <%= link_to @event, class: "btn btn-primary location-btn" do %>
                  <p>Details</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      </div>
 <!--    Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <button onclick="topFunction()" id="myBtn" title="Go to top">
    <i class="fa fa-arrow-up" aria-hidden="true"></i>
  </button>

  <%= render 'welcome' %>

  <%= render 'youth_home' %>

  <%= render 'talks' %>

  <%= render 'location' %>
</div>


